#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[])
{
        char buf[256];
        if(strlen(argv[1])>256)
        {
        printf("Not this time you hacker!");
        return 0;
        }
        strcpy(buf, argv[1]);
        printf("%s\n", buf);
        return 0;
}

